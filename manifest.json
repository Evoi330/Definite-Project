{
  "manifest_version": 3,
  "name": "Rehabilitation Centre",
  "version": "1.0",
  "description": "The Rehabilitation Centre should (keyword: should) absolve you of your current social media addiction.",
  "permissions": ["storage", "tabs"]
  "host_permissions": ["https://*.youtube.com/*"]
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": []
}
